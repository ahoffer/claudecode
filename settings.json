{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "TodoWrite",
      "mcp__plugin_serena_serena__*",
      "Bash(*)"
    ],
    "deny": [
      "Bash(git push*)",
      "Bash(sudo *)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~*)",
      "Bash(> /*)",
      "Bash(chmod 777*)",
      "Bash(curl * | bash*)",
      "Bash(wget * | bash*)"
    ],
    "defaultMode": "default"
  },
  "enabledPlugins": {
    "serena@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
